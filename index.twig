<html>
<head>
<meta charset=utf-8 />
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
<link href="https://fonts.googleapis.com/css?family=Cormorant Unicase|Cormorant|Cormorant:700|Comfortaa|Noto+Sans" rel="stylesheet">
<link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}
<title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

</head>
<body>
	<div class=hero-image id=home style="background-image:linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),url('{% if meta.image %} {{meta.image}} {% else %} https://picsum.photos/1920/1080?random {% endif %}');">
		<span class=hero-image-center>{{ content }}</span>
	</div>


<div class=fixed-top><div class=header><a href={{base_url}}>{{ site_title }}</a></div></div>
<div class=fixed-bottom><div class=navigation><ul>
    {% for page in pages if page.title %}
        {% set pageDepth = page.id|split('/')|length %}
        {% if (pageDepth == 2) and (page.id ends with "/index") or (pageDepth == 1) %}
            <li {% if page.id == current_page.id %} class="active"{% endif %}>
                <a href="{{ page.url }}">{{ page.title }}</a>
            </li>
        {% endif %}
    {% endfor %}
</ul>
		</div></div>
</body>
</html>
